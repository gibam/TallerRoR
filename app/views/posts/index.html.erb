<h1> Todos mis posts :3 </h1>

<table>
	<tr>
		<th> Titulo </th>
		<th> Texto </th>
		<th></th>
    	<th></th>
    	<th></th>
	</tr>

	<% @posts.each do |post| %>
	<tr>
		<td> <%= post.title %> </td>
		<td> <%= post.text %> </td>
		<td> <%= link_to 'Show', post_path(post) %> </td>
    	<td> <%= link_to 'Edit', edit_post_path(post) %> </td>
    	<td> <%= link_to 'Delete', post_path(post), method: :delete, data: { confirm: 'Are you sure?' } %> </td>


	</tr>
	<% end %>

</table>

<%= link_to "Agregar Nuevo Post", new_post_path %>
